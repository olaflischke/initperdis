<local:DialogBase
    x:Class="ChinookExplorerUi.AddEditTrack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChinookExplorerUi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddEditTrack"
    Width="300"
    Height="130"
    Result="{Binding Result}"
    mc:Ignorable="d">
    <Canvas>
        <TextBox
            Canvas.Left="134"
            Canvas.Top="10"
            Width="120"
            Text="{Binding Track.Name}" />
        <TextBox
            Canvas.Left="134"
            Canvas.Top="33"
            Width="120"
            Text="{Binding Track.Milliseconds}" />
        <TextBox
            Canvas.Left="134"
            Canvas.Top="56"
            Width="120"
            Text="{Binding Track.UnitPrice}" />
        <Label
            Canvas.Left="54"
            Canvas.Top="10"
            Content="Name" />
        <Label
            Canvas.Left="54"
            Canvas.Top="33"
            Content="Milliseconds" />
        <Label
            Canvas.Left="54"
            Canvas.Top="56"
            Content="Price" />
        <Button
            Canvas.Left="134"
            Canvas.Top="79"
            Width="120"
            Command="{Binding SaveCommand}"
            Content="OK" />

    </Canvas>
</local:DialogBase>
