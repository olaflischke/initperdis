<Window
    x:Class="ChinookExplorerUi.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChinookExplorerUi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="10,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="20"
                Height="20"
                Command="{Binding NewTrackCommand}"
                Content="+" />
            <Button
                Width="20"
                Height="20"
                Command="{Binding EditTrackCommand}"
                Content="/.." />
        </StackPanel>

        <local:ucExplorer Grid.Row="1" ArtistsByGenre="{Binding ArtistsByGenre}"/>

    </Grid>
</Window>
